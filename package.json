{
  "private": true,
  "name": "1tuner",
  "version": "2.3.1",
  "description": "1 web app to listen to audio streams and auto-switch",
  "author": "Robin Bakker",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --prerenderUrls ./prerender-urls.js --template template.html",
    "serve": "preact build && preact serve",
    "dev": "preact watch --template template.html"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "if-env": "^1.0.4",
    "normalize-url": "^7.0.2",
    "postcss": "^8.3.9",
    "preact-cli": "^3.3.1",
    "preact-render-to-string": "^5.1.19"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "idb-keyval": "^6.0.3",
    "preact": "^10.5.15",
    "preact-router": "^3.2.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 150,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
